---
export type Props = {
  link: string,
  imgSrc: string,
  name: string,
  color: string
};
const { link, imgSrc, name, color }: Props = Astro.props;
---

<a href={link} class="text-center my-auto h-full">
  <div class={`bg-gradient-to-b from-${color}-200 to-${color}-300 h-full rounded-xl p-4 flex sms:block sm:flex`}>
    <img src={imgSrc} alt={name} class="w-1/5 object-contain mx-0 sms:mx-auto sm:mx-0"/>
    <p class="m-auto pt-0 sms:pt-3 sm:pt-0 font-semibold text-base md:text-lg font-mono">{name}</p>
  </div>
</a>
